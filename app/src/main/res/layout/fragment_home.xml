<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/self_card_view"
        app:layout_constraintWidth_percent="0.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/air_conditioning_switch"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="空调"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/water_heater_switch"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="热水器"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/socket_switch1"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="插座1"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/socket_switch2"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="插座2"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/socket_switch3"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="插座3"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/socket_switch4"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="插座4"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/washer_switch"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    android:scrollbarSize="14sp"
                    android:text="洗衣机"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/self_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardCornerRadius="46dp"
        app:cardElevation="18dp"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/dormitory_text"
                    android:layout_width="196dp"
                    android:layout_height="116dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:text="@string/dormitory"
                    android:textColor="#ffaa11"
                    android:textIsSelectable="true"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="55dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/dormitory" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:weightSum="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/temperature_icon"
                        android:layout_width="63dp"
                        android:layout_height="34dp"
                        android:src="@drawable/high_temperature"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/temperature_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35°C"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/temperature_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/humidity_icon"
                        android:layout_width="63dp"
                        android:layout_height="34dp"
                        android:src="@drawable/humidity"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/humidity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45%"
                        android:textColor="#333333"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/humidity_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>